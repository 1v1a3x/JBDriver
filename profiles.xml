<?xml version="1.0" encoding="UTF-8"?>
<profilesXml xmlns="http://maven.apache.org/PROFILES/1.0.0"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://maven.apache.org/PROFILES/1.0.0 http://maven.apache.org/xsd/profiles-1.0.0.xsd">
    <profiles>
        <profile>
            <id>qa-firefox</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <configuration.selenium.frameWidth>640</configuration.selenium.frameWidth>
                <configuration.selenium.frameHeight>120</configuration.selenium.frameHeight>
                <configuration.cross.reference.withJsonOnly>true</configuration.cross.reference.withJsonOnly>
                <configuration.cross.reference.withOutputAfterEachStory>true
                </configuration.cross.reference.withOutputAfterEachStory>
                <configuration.cross.reference.excludingStoriesWithNoExecutedScenarios>true
                </configuration.cross.reference.excludingStoriesWithNoExecutedScenarios>
                <configuration.story.reporter.builder.withFailureTrace>true
                </configuration.story.reporter.builder.withFailureTrace>
                <configuration.story.reporter.builder.withFailureTraceCompression>true
                </configuration.story.reporter.builder.withFailureTraceCompression>
                <configuration.story.reporter.builder.withDefaultFormats>true
                </configuration.story.reporter.builder.withDefaultFormats>
                <configuration.resetStateBeforeScenario>false</configuration.resetStateBeforeScenario>
                <ui.tests.threads.number>1</ui.tests.threads.number>
                <browser>firefox</browser>
            </properties>
        </profile>
        <profile>
            <id>qa-chrome</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <configuration.selenium.frameWidth>640</configuration.selenium.frameWidth>
                <configuration.selenium.frameHeight>120</configuration.selenium.frameHeight>
                <configuration.cross.reference.withJsonOnly>true</configuration.cross.reference.withJsonOnly>
                <configuration.cross.reference.withOutputAfterEachStory>true
                </configuration.cross.reference.withOutputAfterEachStory>
                <configuration.cross.reference.excludingStoriesWithNoExecutedScenarios>true
                </configuration.cross.reference.excludingStoriesWithNoExecutedScenarios>
                <configuration.story.reporter.builder.withFailureTrace>true
                </configuration.story.reporter.builder.withFailureTrace>
                <configuration.story.reporter.builder.withFailureTraceCompression>true
                </configuration.story.reporter.builder.withFailureTraceCompression>
                <configuration.story.reporter.builder.withDefaultFormats>true
                </configuration.story.reporter.builder.withDefaultFormats>
                <configuration.resetStateBeforeScenario>false</configuration.resetStateBeforeScenario>
                <ui.tests.threads.number>1</ui.tests.threads.number>
                <browser>chrome</browser>
            </properties>
        </profile>
        <profile>
            <id>cicd</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <configuration.selenium.frameWidth>640</configuration.selenium.frameWidth>
                <configuration.selenium.frameHeight>120</configuration.selenium.frameHeight>
                <configuration.cross.reference.withJsonOnly>true</configuration.cross.reference.withJsonOnly>
                <configuration.cross.reference.withOutputAfterEachStory>true</configuration.cross.reference.withOutputAfterEachStory>
                <configuration.cross.reference.excludingStoriesWithNoExecutedScenarios>true</configuration.cross.reference.excludingStoriesWithNoExecutedScenarios>
                <configuration.story.reporter.builder.withFailureTrace>false</configuration.story.reporter.builder.withFailureTrace>
                <configuration.story.reporter.builder.withFailureTraceCompression>false</configuration.story.reporter.builder.withFailureTraceCompression>
                <configuration.story.reporter.builder.withDefaultFormats>true</configuration.story.reporter.builder.withDefaultFormats>
                <configuration.resetStateBeforeScenario>false</configuration.resetStateBeforeScenario>
                <ui.tests.threads.number>1</ui.tests.threads.number>
                <browser>htmlunit</browser>
            </properties>
        </profile>
    </profiles>
</profilesXml>

 
